		<div class="infoEstadio">
			<img src="${resource(dir: '/images', file: 'iconCusto.png')}" align="absmiddle" /> R$ 632 milh&otilde;es &nbsp;&nbsp;&nbsp;
			<img src="${resource(dir: '/images', file: 'iconPrazo.png')}" align="absmiddle" /> Inaugurado em maio/2013 &nbsp;&nbsp;&nbsp;
			<img src="${resource(dir: '/images', file: 'iconPublico.png')}" align="absmiddle" /> 44.248 lugares &nbsp;&nbsp;&nbsp;
			<img src="${resource(dir: '/images', file: 'iconVagas.png')}" align="absmiddle" /> 4.700 vagas &nbsp;&nbsp;&nbsp;
		</div>
		
		<p class="estadio">MARACAN&Atilde;</p>
		<span style="display:block;" class="descricaoEstadio">Est&aacute;dio M&aacute;rio Filho - Rio de Janeiro (RJ)</span>
